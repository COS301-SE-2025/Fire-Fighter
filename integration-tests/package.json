{
  "name": "firefighter-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for FireFighter frontend and backend",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "integration:test": "npm test && cypress run",
    "pretest": "npx wait-on http://localhost:8080/api/health && npx wait-on http://localhost:4200"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "axios": "^1.6.7",
    "cypress": "^13.6.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
} 